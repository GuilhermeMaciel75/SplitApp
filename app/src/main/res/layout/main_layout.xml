<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:orientation="vertical"
    android:padding="16dp"
    android:textColor="#E0E0E0">

    <!-- RecyclerView ocupando o espaço restante -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewGroups"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="24dp" />

    <!-- LinearLayout para os botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Botão para criar um novo grupo -->
        <Button
        android:id="@+id/btn_cria_grupo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_weight="1"
        android:background="@drawable/button_border"
        android:padding="16dp"
        android:text="Criar novo Grupo"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

        <!-- Botão para entrar em um grupo -->
        <Button
        android:id="@+id/btn_entra_grupo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button_border"
        android:padding="16dp"
        android:text="Entrar em um Grupo"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
