<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- TextView fixo para o nome do participante -->
    <TextView
        android:id="@+id/extract_spent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Participante:"
        android:textSize="18sp"
        android:textColor="#E0E0E0"
        android:layout_marginEnd="8dp"
        android:layout_alignParentStart="true" />

    <!-- EditText para o valor gasto, permitindo input do usuÃ¡rio -->
    <TextView
        android:id="@+id/extract_spent_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="16dp"
        android:textSize="16sp"
        android:hint="Valor"
        android:textColor="#E0E0E0"
        android:layout_marginEnd="8dp" /> <!-- Fundo com contorno branco -->

</LinearLayout>