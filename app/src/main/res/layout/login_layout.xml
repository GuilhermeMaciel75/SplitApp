<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:gravity="center"
    android:padding="16dp"
    android:textColor="#E0E0E0"> <!-- Texto Branco para Contraste -->

    <!-- Imagem do logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo" />

    <!-- Label e Caixa de entrada de login -->
    <TextView
        android:text="Login: "
        android:textColor="#E0E0E0"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="16dp"
        android:layout_marginBottom="8dp" /> <!-- Espaçamento entre label e input -->

    <EditText
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E0E0E0"
        android:background="@drawable/edit_text_border"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Digite seu login" />

    <!-- Label e Caixa de entrada de senha -->
    <TextView
        android:text="Senha:"
        android:textColor="#E0E0E0"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_marginBottom="8dp" /> <!-- Espaçamento entre label e input -->

    <EditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E0E0E0"
        android:background="@drawable/edit_text_border"
        android:padding="16dp"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:layout_marginBottom="32dp"
        android:hint="Digite sua senha" />

    <!-- Botão de login -->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_border"
        android:padding="16dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- Botão de cadastro -->
    <Button
        android:id="@+id/btn_make_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:text="Cadastrar-se"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="16dp"/>

</LinearLayout>
